extends layout

block content
  h1= message
  h2= error.status
  if error.status = 404
    div
      img(src="/images/404-image.png" alt="404IMG" class = "not-found-img"  )

      if error.typeOf === "question"
        div We couldn't find that question. Sorry about that.
      else
        div We couldn't find that page
