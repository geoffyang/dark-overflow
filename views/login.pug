extends layout.pug
include utils.pug


block content
    div(class = "login_errors")
        +validationErrorSummary(errors)
    div(class = "login_user")
        div(class = 'title') Log In
            div(class = 'details')
                form(action="/users/login", method="post")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div(class='form-field-div')
                        +field("Username", "userName",  "")
                    div(class='form-field-div')
                        +field("Password", "password", "", "password" )
                    div()
                        button(type="submit" class ="login-button button" ) Log in
                form(action="/users/demo", method="post")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    button(type="submit" class ="login-button button" ) Demo User

    div(class='login-to-signup')
        span Don't have an account? #[a(href="/users/signup") Sign up] to start asking questions.
